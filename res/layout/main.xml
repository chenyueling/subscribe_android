<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/titleBarEditBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center"
                android:textColor="@color/editBtn"
                android:text="@string/menu"/>

        <TextView
                android:id="@+id/titleBarTextView1"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="0.72"
                android:gravity="center"
                android:text="@string/currentPage"/>

        <ImageView
                android:id="@+id/titleBarAddBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:src="@drawable/add"
                android:contentDescription="@drawable/add"/>
    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="center_horizontal"
            android:divider="@color/line"
            android:dividerHeight="1dp"/>


</LinearLayout>

