<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/server_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:src="@drawable/back"
                android:layout_margin="13dp"
                android:contentDescription="@drawable/back"/>

        <TextView
                android:id="@+id/titleBarTextView1"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="0.72"
                android:gravity="center"
                android:text="@string/server"/>

        <View
                android:id="@+id/titleBarAddBtn1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.06"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                />
    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView" android:layout_gravity="center_horizontal"
            android:divider="@color/line"
            android:dividerHeight="1dp"/>
</LinearLayout>